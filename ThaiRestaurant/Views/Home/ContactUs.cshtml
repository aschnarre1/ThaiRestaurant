@{
    ViewData["Title"] = "Contact Us";
}
@inject IConfiguration Configuration


<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Hours</h3>
            <p class ="compact-paragraph"><strong> Monday-Thursday</strong></p>
            <p class="compact-paragraph">10:30 am-3:00 pm</p>
            <p class="compact-paragraph">4:00 pm-8:30 pm</p>
            <p class="compact-paragraph"><strong> Friday-Saturday</strong></p>
            <p class="compact-paragraph">11:00 am-9:00 pm</p>
            <p class="compact-paragraph"><strong> Sunday</strong></p>
            <p class="compact-paragraph">Closed</p>
            <h3 class="compact-paragraph">Contact Information</h3>
            <p class ="compact-paragraph"><strong>Address:</strong> 520 128th St. SW Everett, WA 98204</p>
            <p class="compact-paragraph"><strong>Phone:</strong> 425-263-9956</p>
            <p><strong>Email:</strong> allricethaihut@gmail.com</p>
        </div>

        <div class="col-md-6">
            <h3>Find Us!</h3>
            <div id="map" style="height: 250px;"></div>
            <h3 id="FeedBackHead">Feedback Form</h3>
            <form method="post" asp-controller="Message" asp-action="Create" class="row">
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="MessageText" class="form-label">Your Feedback</label>
                    <textarea class="form-control" id="MessageText" name="MessageText" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Feedback</button>
            </form>
               
        </div>
    </div>
</div>



<script>
    @{
        var mapboxAccessToken = Configuration["Mapbox:AccessToken"];
    }
    mapboxgl.accessToken = '@mapboxAccessToken';
    var addressCoordinates = [-122.240089, 47.880661];
    var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: addressCoordinates,
        zoom: 13
    });
    var marker = new mapboxgl.Marker()
        .setLngLat(addressCoordinates) 
        .addTo(map); 
</script>



<script>
    document.querySelector('form').addEventListener('submit', function () {
        document.querySelectorAll('input[type="text"], input[type="textarea"]').forEach(function (input) {
            input.value = input.value.trim().ToLower();
        });
    });
</script>