                    <input asp-for="ImageUrl" class="form-control border-0 shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div> *@
                    <div class="form-floating py-2 col-12">
        <input asp-for="ImageUrl" class="form-control border-0 shadow" readonly />
        <label asp-for="ImageUrl" class="ms-2" style="color: black;">Current Image URL</label>
    </div>
    <div class="form-group py-2 col-12">
        <label style="color: black;">New Image (optional)</label>
        <input type="file" class="form-control-file" style="color: black;" name="imageFile">
    </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>

}